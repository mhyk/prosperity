
@{
    ViewBag.Title = "Assign Survey";


<h2>Assign Survey</h2>
    if (ViewBag.SurveyCount == 0)
    {
    <div class="alert alert-danger">
        No Active Survey to assign. Create new Survey @Html.ActionLink("here", "Create").
    </div>
    }
    else
    {
        using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
        
            <div class="form-group">
                <label class="control-label col-md-2">Surveys</label>
                <div class="col-md-10">
                    @Html.DropDownList("SurveyId", null, htmlAttributes: new { @class = "form-control" })
                
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Staff</label>
                <div class="col-md-10">
                    @Html.DropDownList("AccountId", null, htmlAttributes: new { @class = "form-control" })

                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Assign" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}