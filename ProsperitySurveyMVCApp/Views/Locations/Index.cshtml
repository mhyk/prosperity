@model IEnumerable<ProsperitySurveyMVCApp.Models.Location>

@{
    ViewBag.Title = "Baranggays";
}

<h2>Baranggays</h2>

<p>
    <button class="btn btn-default">@Html.ActionLink("Create New", "Create")</button>
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Baranggay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Province)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Baranggay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Province)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
            
        </td>
    </tr>
}

</table>
